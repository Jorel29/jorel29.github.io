---
import DropdownButton from './DropdownButton.svelte';
import Accordion from './Accordion.svelte';
let GitHubLink = "https://github.com/Jorel29";
let LinkedInLink = "https://www.linkedin.com/in/jorelhuerto/";
---

<div class="nav-bar">
    <div class="div-nav-bar">
        <Accordion styleDetails="width: 5rem;" styleSlide="w-12 h-12" client:visible>
            <div slot="head" class="text-sm">Nav</div>
            <div class="grid" slot="details">
                <button class="w-20 h-10 bg-white rounded-full">Link 1</button>
                <button class="w-20 h-10 bg-white rounded-full">Link 2</button>
                <button class="w-20 h-10 bg-white rounded-full">Link 3</button>
            </div>
        </Accordion>
        <p class="nav-title">Jorel Huerto</p>
        <a class="external-link" href={LinkedInLink}>
            <img class="linked-in-icon" src="/LI-In-Bug.png"/>        
        </a>
        <a class="external-link" href={GitHubLink}>
            <img class="github-icon" src="/github-mark-white.png"/>        
        </a>
    </div>
</div>
<style>
    .nav-title{
        font-family: "FiraMono", monospace;
        color: rgb(198, 102, 68);
        font-size: 3rem;
        font-weight: 700;
        margin: 0%;
    }
    .nav-bar{
        margin: 0;
        width: 100%;
        height: 10%;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        align-items: center;
        vertical-align: middle;
        background-color: transparent;
       
        padding-top: 0rem;
        padding-left: 16px;
        padding-right: 16px;
        padding-bottom: 0rem;
        border-radius: 0.25rem;
        position: fixed;
        z-index: 1;
    }
    .div-nav-bar{
        display:flex;
        justify-content: center;
        max-width: 100%;
        padding-top: 10px;
    }
    .external-link{
        justify-content: baseline;
    }
    .linked-in-icon{
        width: auto;
        height:55px;
    }
    .linked-in-icon:hover{
        width: auto;
        height:55px;
        background-color: gray;
        border-radius: 5px;
    }
    .github-icon{
        width: auto;
        height: 55px;
    }
    .github-icon:hover{
        width: auto;
        height: 55px;
        background-color: gray;
        border-radius: 50%;
    }
</style>