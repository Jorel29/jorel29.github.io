---
export interface Props{
    title:string;
    titleStyle:string;
    barWidth:string;
    barLabel:string;
    barBgStyle:string;
}
const {barWidth = "10%", barBgStyle = "bg-black", barLabel, title, titleStyle} = Astro.props;
---
<section class="bar-graph bar-graph-horizontal bar-graph-one">
    
    <div class:list={["bar-one", barBgStyle]}>
        <span class:list={["title", titleStyle]}>{title}</span>
        <div class="bar" data-percentage={barLabel}></div>
    </div>
    
</section>

<style define:vars={ {barWidth} }>
    

/* Bar Graph Horizontal */

.bar-graph .title {
  animation: fade-in-text 2.2s 0.1s forwards;
  opacity: 0;
}

.bar-graph-horizontal {
  width: 500px;
  max-width: 500px;
}

.bar-graph-horizontal > div {
  float: left;
  margin-bottom: 8px;
  width: 100%;
}

.bar-graph-horizontal .title {
  float: left;
  margin-top: 18px;
  width: 50px;
}

.bar-graph-horizontal .bar {
  border-radius: 3px;
  height: 55px;
  float: left;
  overflow: hidden;
  position: relative;
  width: 0;
}

.bar-graph-one .bar::after {
  animation: fade-in-text 2.2s 0.1s forwards;
  color: #fff;
  content: attr(data-percentage);
  position: absolute;
  right: 16px;
  top: 17px;
}

.bar-graph-one .bar-one .bar {
  background-color: #64b2d1;
  animation: show-bar-one 1.2s 0.1s forwards;
}


/* Bar Graph Horizontal Animations */
@keyframes show-bar-one {
  0% {
    width: 0;
  }
  100% {
    width: var(--barWidth);
  }
}

@keyframes fade-in-text {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
</style>