---
import Layout from '../layouts/Layout.astro';
import ExpandingCard from '../components/ExpandingCard.astro'
import Nav from '../components/Nav.astro';
import PanelLayout from '../layouts/PanelLayout.astro';
import Accordion from '../components/Accordion.svelte';
import HorizontalBar from '../components/HorizontalBar.astro';
---



<Layout title="Jorel Huerto">
	<main>
		<Nav></Nav>
		<div class="background">
			<div class="about-me-wrapper bg-black/[0.2]">
				<p>summary</p>
			</div>
			
			<PanelLayout>
				<ExpandingCard
					href=""
					title="Project 1"
					body="Learn how Astro works and explore the official API docs."
					slot="panel-one"
				/>
				<ExpandingCard
					href=""
					title="Project 2"
					body="Supercharge your project with new frameworks and libraries."
					slot="panel-two"
				/>
				<ExpandingCard
					href=""
					title="Project 3"
					body="Explore a galaxy of community-built starter themes."
					slot="panel-three"
				/>
				<ExpandingCard
					href=""
					title="Project 4"
					body="Come say hi to our amazing Discord community. ❤️"
					slot="panel-four"
				/>
			</PanelLayout>
			
			<div class = "bar-chart-grid grid justify-center bg-black/[0.2]">
				<HorizontalBar 
					title="Python" 
					titleStyle='text-white'
					sectionWidth='600px'
					barWidth='80' 
					barBgStyle='flex' 
					 
				/>
				<HorizontalBar 
					title="JavaScript" 
					titleStyle='text-white'
					sectionWidth='600px'
					barWidth='70' 
					barBgStyle='flex' 
					
				/>
				<HorizontalBar 
					title="C" 
					titleStyle='text-white'
					sectionWidth='600px'
					barWidth='70' 
					barBgStyle='flex' 
					
				/>
				<HorizontalBar 
					title="C++" 
					titleStyle='text-white'
					sectionWidth='600px'
					barWidth='50' 
					barBgStyle='flex' 
					
				/>
				<HorizontalBar 
					title="Java" 
					titleStyle='text-white'
					sectionWidth='600px'
					barWidth='50' 
					barBgStyle='flex' 
					
				/>
			</div>
		</div>
		
		  

		<script>
			VANTA.NET({
				el: ".background",
				mouseControls: false,
				touchControls: false,
				gyroControls: false,
				minHeight: 200.00,
				minWidth: 200.00,
				height: 200,
				scale: .75,
				scaleMobile: 1.00
			})
		</script>
	</main>
</Layout>

<style>
	.about-me-wrapper{
		overflow: hidden;
		padding-top: 50px;
		z-index: 2;
	}
	.background{
		overflow: visible;
		margin-top: 10px;
		width: 100%;
		height: 1080px;
		z-index: 0;
	}
	main {
		margin: auto;
		padding: 0rem
	}
	Nav{
		z-index: 1;
	}
	
</style>
